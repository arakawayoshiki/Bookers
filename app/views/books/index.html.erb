 <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
 <% end %>    
<h1>Books</h1>
<% @books.each do |book| %>
  <table>
      <thead>
          <tr>
              <th>Title</th>
              <th>Body</th>
              <th></th>
          </tr>
      </thead>

      <tbody>
          <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>

              <td><%= link_to "Show", book_path(book.id) %></td>
              <td><%= link_to "Edit", edit_book_path(book) %></td>
              <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
      </tbody>
  </table>
<% end %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>

  <h6>Body</h6>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
